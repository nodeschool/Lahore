.social {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  .header {
    display: flex;
    width: 100%;
    height: 100%;
    padding: 50px 50px 60px 50px;

    &:after {
      background-size: 40px 26px;
    }
  }

  .header__identification {
    position: static;
    float: left;
  }

  .header__logo {
    width: 235px;
  }

  .header__logo-text {
    font-size: 38px;
    line-height: 54px;
  }

  .next-event__description {
    padding: 30px 50px;
  }

  .next-event__actions {
    position: absolute;
    right: 0;
    bottom: 0;
    left: 0;
  }

  .next-event__action__learn {
    width: 100%;
    line-height: 160%;
    padding-top: 15px;
  }
}

.social__message {
  position: relative;
  flex: 1;
  margin: 0 0 0 50px;
  font-size: 38px;
  line-height: 45px;

  p {
    margin: 20px 0;
  }
}
